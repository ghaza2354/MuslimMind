<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.mainpage.MainPageFragment"
    android:background="@drawable/header">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:paddingTop="10dp"
                android:id="@+id/header_greetings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura"
                android:text="Hi, "
                android:textColor="@android:color/white"
                android:textSize="25sp"/>

            <TextView
                android:paddingTop="10dp"
                android:id="@+id/header_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura"
                android:layout_toEndOf="@+id/header_greetings"
                android:text="Ghaza Ataillah"
                android:textColor="@android:color/white"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/hijriah_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 Dzhulhijjah 1440"
                android:layout_below="@+id/header_greetings"
                android:textColor="@android:color/white"
                android:paddingTop="5dp"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/user"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.mainpage.MainPageFragment"
    android:background="@drawable/header">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:paddingTop="10dp"
                android:id="@+id/header_greetings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura"
                android:text="Hi, "
                android:textColor="@android:color/white"
                android:textSize="25sp"/>

            <TextView
                android:paddingTop="10dp"
                android:id="@+id/header_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura"
                android:layout_toEndOf="@+id/header_greetings"
                android:text="Ghaza Ataillah"
                android:textColor="@android:color/white"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/hijriah_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 Dzhulhijjah 1440"
                android:layout_below="@+id/header_greetings"
                android:textColor="@android:color/white"
                android:paddingTop="5dp"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/user"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jakarta"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                />

            <TableLayout
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TableRow
                    android:layout_marginTop="10dp">

                    <TextView android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:text="@string/subuh"/>

                    <TextView android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:text="@string/dzuhur"/>

                    <TextView android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:text="@string/ashar"/>

                    <TextView android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:text="@string/maghrib"/>

                    <TextView android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:text="@string/isya"/>

                </TableRow>

                <TableRow>

                <TextView
                    android:id="@+id/jadwal_subuh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="@string/subuh"/>

                <TextView
                    android:id="@+id/jadwal_dzuhur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="@string/dzuhur"/>

                <TextView
                    android:id="@+id/jadwal_ashar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="@string/ashar"/>

                <TextView

                    android:id="@+id/jadwal_maghrib"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="@string/maghrib"/>

                <TextView
                    android:id="@+id/jadwal_isya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="@string/isya"/>

            </TableRow>

            </TableLayout>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>